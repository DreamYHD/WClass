<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        app:cardBackgroundColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/do_item_image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/do_item_joinnum"
                android:textSize="12sp"
                android:text="0 人参与"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/do_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:textColor="#4a4a4a"
                android:text="讨论/java多线程编程问题"
                android:id="@+id/do_item_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/do_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/do_item_score"
                android:textSize="12sp"
                android:text="3 经验"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/do_item_image"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:text="答题"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/do_item_image"
                android:id="@+id/do_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:background="#c6c6c6"
        android:layout_width="match_parent"
        android:layout_height="3dp" />

</LinearLayout>